<p id="notice"><%= notice %></p>

<h1>Topics</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to "Title", :sort =>"title" %></th>
      <th><%= link_to "Votes", :sort => "vote"%></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= link_to topic.title, topic_path(topic) %></td>
        <td><%= pluralize(topic.votes.count, 'vote') %></td>
        <td><%= button_to '+1', upvote_topic_path(topic), method: :post %></t>
        <td><%= button_to '-1', downvote_topic_path(topic), method: :post %></t>
        <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td><%= link_to 'Delete', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

